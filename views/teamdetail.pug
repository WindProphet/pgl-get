div.battleteam-pokemon-container(class=(battleType == 1 ? "battleSingle" : "battleDouble"))
  each poke in pokemonList
    div.pokemon-block
      div.pokemon
        div.name= poke.name
        div.image
          - r = (0x1000000|0x159a55e5*(poke.monsno+poke.formNo*0x10000)&0xFFFFFF).toString(16).substr(1);
          div(style=("background-image:url(https://n-3ds-pgl-contents.pokemon-gl.com/share/images/pokemon/140/"+r+".png);"))
        ul.types
          li(class=("type"+poke.typeId1))= poke.typeName1
          li(class=("type"+poke.typeId2))= poke.typeName2
        div.level
          li Lv. #{poke.level}
        div.gender(class=("gender-"+poke.gender))= (poke.gender == 2)?(""):(poke.gender == 0?"♂":"♀")
        ul.moves
          li(class=("type"+poke.waza1.typeId))= poke.waza1.name
          li(class=("type"+poke.waza2.typeId))= poke.waza2.name
          li(class=("type"+poke.waza3.typeId))= poke.waza3.name
          li(class=("type"+poke.waza4.typeId))= poke.waza4.name
        div.ability
          span Ability: #{poke.tokusei}
        - itemimg = (0x1000000|0x159a55e5*(poke.itemId+0*0x10000)&0xFFFFFF).toString(16).substr(1);
        div.item(style=("background-image:url(https://n-3ds-pgl-contents.pokemon-gl.com/share/images/item/"+itemimg+".png);"))
          span ITEM: #{poke.itemName}
